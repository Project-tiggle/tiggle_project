<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE configuration PUBLIC
"-//mybatis.org//DTD Config 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>
	<!-- Mybatis 는 sql 구문에 사용되는 값이 null 이면 에러 발생함. 
		 null 을 사용할 수 있게 하려면 아래의 설정을 추가함
	-->
	<settings>
		<setting name="jdbcTypeForNull" value="NULL"/>
		<setting name="cacheEnabled" value="false"/>
	</settings>

	<!-- 존재하지 않는 클래스와 매퍼파일을 먼저 등록 설정하면 에러 발생함 : 톰캣 구동 안됨 -->
	<typeAliases>
		<typeAlias type="com.ex.tiggle.member.model.dto.Member" alias="Member" />
		<typeAlias type="com.ex.tiggle.exhibition.model.dto.Exhibition" alias="Exhibition" />
		<typeAlias type="com.ex.tiggle.orgregist.model.dto.OrgRegist" alias="OrgRegist" />
		<typeAlias type="com.ex.tiggle.map.model.dto.NearbyMap" alias="NearbyMap" />
		<typeAlias type="com.ex.tiggle.common.Paging" alias="Paging"/>
		<typeAlias type="com.ex.tiggle.common.Search" alias="Search"/>
		<typeAlias type="com.ex.tiggle.notice.model.dto.Notice" alias="Notice"/>
		<typeAlias type="com.ex.tiggle.review.model.dto.Review" alias="Review"/>
		<typeAlias type="com.ex.tiggle.review.model.dto.ReviewPaging" alias="ReviewPaging"/>
		
	</typeAliases>
	
	<mappers>
		<mapper resource="mappers/member-mapper.xml" />
		<mapper resource="mappers/exhibition-mapper.xml" />
		<mapper resource="mappers/orgregist-mapper.xml" />
		<mapper resource="mappers/notice-mapper.xml" />
		<mapper resource="mappers/map-mapper.xml" />
		<mapper resource="mappers/review-mapper.xml" />
		
	</mappers>
</configuration>
